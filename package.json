{
  "name": "upsend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=upsend-production --r2=IMAGES --local --ip 0.0.0.0 --port 3000",
    "build": "vite build",
    "preview": "wrangler pages dev dist --d1=upsend-production --local",
    "deploy": "npm run build && wrangler pages deploy dist --project-name upsend",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply upsend-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply upsend-production",
    "db:console:local": "wrangler d1 execute upsend-production --local",
    "db:console:prod": "wrangler d1 execute upsend-production",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true"
  },
  "dependencies": {
    "hono": "^4.10.7"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}